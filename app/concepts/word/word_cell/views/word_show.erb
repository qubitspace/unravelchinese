
<div class="word <%=type%>" word-id="<%=id%>" type="show">

  <h3><%= simplified %></h3>

  <h4>Definitions:</h4>
  <div id="definitions">
    <% definitions.each do |definition| %>
      <div class="word_definition">
          (<%= definition.rank %>) <%= definition.value %><br>
      </div>
    <% end %>
  </div>

  <h4>Tags:</h4>
  <div class="word_tag">
    <% tags.each do |tag| %>
      â€¢ <%= tag.name %><br/>
    <% end %>
  </div>

  <h4>Actions:</h4>
  <% status_links.each do |link| %>
    <div class="link"><%= link %></div>
  <% end %>
</div>

