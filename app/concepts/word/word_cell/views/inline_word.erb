<div class="word <%= display_type %> <%= status %> <%= category %>" word-id="<%=id%>">
  <% if current_user.present? %>
    <% if status == 'known' or status == 'learning' %>
      <span class='top <%= status %>'>
        <%= simplified %><br/>
      </span>
      <span class='bottom <%= status %>'>
        <%= pinyin %>
      </span>
    <% elsif status == 'watching' or status == 'unknown' %>
      <span class='top <%= status %>'>
        <%= pinyin %><br/>
      </span>
      <span class='bottom <%= status %>'>
        <%= simplified %>
      </span>
    <% else %>
      <span class='top <%= status %>'>
        <%= simplified %><br/>
      </span>
    <% end %>
  <% else %>
    <%# This is what non-logged in users see %>
    <span class='top not-logged-in <%= category %>'>
      <%= simplified %><br/>
    </span>

    <span class='bottom not-logged-in <%= category %>'>
      <%= pinyin %>
    </span>
  <% end %>


  <% if category == "chinese" %>
    <div class="word-tooltip" word-id="<%= id %>">
      <!--div class="close-tooltip close-button">&#10006;</div-->

      <span class='simplified'>
        <%= link_to simplified, word_path(model), :target => "_blank" %>
      </span><br>

      <span class='pinyin'>
        <%= pinyin %>
      </span>

      <hr>

      <div class="definitions">
        <strong>
        <% definitions.each do |definition| %>
          â€¢ <%= raw definition.html_value %><br/>
        <% end %>
        </strong>
      </div>

      <% if !status_links.empty? %>
        <hr>

        <% status_links.each do |link| %>
          <div class="link"><%= link %></div>
        <% end %>
      <% end %>

    </div>
  <% end %>
</div>