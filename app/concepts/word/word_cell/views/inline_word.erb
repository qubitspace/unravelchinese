<div class="word <%= display_type %> <%= status %> <%= category %>" word-id="<%=id%>">
    <% if status == 'known' || category == 'punctuation' %>
      <span class='top learnable'>
        <%= simplified %><br/>
      </span>
      <span class='bottom learnable'>
        <%= pinyin %>
      </span>
    <% elsif status == 'learning' %>
      <span class='top learnable'>
        <%= simplified %><br/>
      </span>

      <span class='bottom learnable'>
        <%= pinyin %>
      </span>
    <% elsif status == 'watching' %>
      <span class='top learnable'>
        <%= pinyin %>
      </span>

      <span class='bottom learnable'>
        <%= simplified %><br/>
      </span>
    <% else %>
      <span class='top learnable'>
        <%= pinyin %><br/>
      </span>

      <span class='bottom learnable'>
        <%= simplified %>
      </span>
    <% end %>

  <% if category == "chinese" %>
    <div class="tooltip" word-id="<%= id %>">
      <div class="close_tooltip close_button">&#10006;</div>

      <span class='top'>
        <%= link_to simplified, word_path(model), :target => "_blank" %>
      </span><br>

      <span class='bottom'>
        <%= pinyin %>
      </span>

      <hr>

      <div class="definitions">
        <strong>
        <% definitions.each do |definition| %>
          â€¢ <%= raw definition.html_value %><br/>
        <% end %>
        </strong>
      </div>

      <% status_links.each do |link| %>
        <div class="link"><%= link %></div>
      <% end %>

    </div>
  <% end %>
</div>