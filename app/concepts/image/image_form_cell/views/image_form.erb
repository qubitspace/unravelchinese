<div class="image <%= display_type %>" image-id="<%= id %>">

  <%= nested_form_for model, :remote => true, :html => { :class => "style-me" } do |f| %>
    <%= f.hidden_field :display_type, value: display_type %>

    <%= f.label :title %>
    <%= f.text_field :title %><br>

    <%= f.label :file %>
    <%= f.file_field :file %><br>

    <%= f.label :description %>
    <%= f.text_field :description %><br>

    <%= f.label :source %>
    <%= f.collection_select :source_id, Source.all, :id, :name, include_blank: "" %><br>

    <%= f.submit "Submit", class: :submit %> <%= cancel_link %>
  <% end %>
  <%= model.errors.messages unless model.errors.empty? %><br>

</div>
