<div id="manage-article">
  <h1><%= title %></h1>
  <%= source.name %><br>
  <%= description %><br>
  <br><br>
  <hr>
  <br>
  <div id="sections">

    <% sections.each do |section| %>
      <%= concept("section/section_cell/manage_section_cell", section, current_user: current_user).call(:show) %>
    <% end %>
  </div>
</div>

