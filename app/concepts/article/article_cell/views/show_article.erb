<div class="article <%= display_type %>" article-id="<%= id %>">

  <% if current_user and current_user.admin? %>
    <%= link_to 'Manage', article_manage_path(model) %>
  <% end %>

  <div class="title"><%= title %></div>

  <div class="source">
    <% if source.present? %><%= link_to source.name, source %><br><% end %>
  </div>

  <div class="tags">
     <%#= concept("tagging/tagging_cell/show_tagging_cell", collection: taggings, current_user: current_user) %>
  </div>

  <div class="description">
    <% if description.present? %><%= description %><% end %>
  </div>

  <% if content_source_name.present? and content_source_link.present? %>
    <div class="content-link">
      Content from <%= link_to content_source_name, content_source_link, :target => "_blank" %><br/>
    </div>
  <% end %>

  <% if translation_source_name.present? and translation_source_link.present? %>
    <div class="translation-link">
      Transtlation by <%= link_to translation_source_name, translation_source_link, :target => "_blank" %><br/>
    </div>
  <% end %>

  <% if iframe.present? %>
    <%= concept("iframe/iframe_cell/inline", iframe, current_user: current_user ) %>
  <%# elsif photo.present? %>
    <!--div class="photo"-->
      <%#= concept("photo/photo_cell/inline", photo, current_user: current_user ) %>
    <!--/div-->
  <% end %>

  <div class="sections">
    <%= concept("section/section_cell/inline", collection: sections, current_user: current_user ) %>
  </div>

</div>
