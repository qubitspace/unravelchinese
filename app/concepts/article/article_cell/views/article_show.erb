
<div class="content">
  <h1><%= title %></h1>
  <%= source.name %><br>
  <% unless description.nil? %><%= description %><% end %>
  <br><br>
  <hr>
  <br>
  <div class="sentences">

    <% sentences.each do |sentence| %>
      <%= link_to 'Manage', sentence_manage_path(sentence) %>
      <%= concept("sentence/cell", sentence).call(:show) %><br/>
    <% end %>
  </div>
</div>


