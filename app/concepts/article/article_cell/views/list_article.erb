<div class="article <%= display_type %>" article-id="<%= id %>">
  <div class='title'>
    <%= name_link %>
  </div>
  <div class='info'>
    From <%= created_at %>
  </div>
  <% if current_user and current_user.admin? %>
    <%= published ? "Published" : "<strong>Unpublished</strong>" %><br/>
    <%= edit_link %> - <%= manage_link %> - <%= delete_link %><br/>
  <% end %>
</div>