= container do
  .header
    - if nice?
      <i class="fi-heart"></i>
    = user.email
    = link_to created_at, "#comment-#{model.id}"
  = body


/= simple_form_for @form, url: create_comment_thing_path(@thing) do |f|
  / = f.input :body
  / = f.collection_radio_buttons :weight, *@form.weights
  / = f.fields_for :user do |u|
  /   = u.input :email
  / = f.button :submit