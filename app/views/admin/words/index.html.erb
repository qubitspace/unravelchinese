<h1>Words</h1>

<%= link_to 'New Word', new_admin_word_path %><br/><br/>

<table>
  <tr>
    <th>Simplified</th>
    <th>Traditional</th>
    <th>Pinyin</th>
    <th colspan="2"></th>
  </tr>

  <% @words.each do |word| %>
    <tr>
      <td><%= link_to word.simplified, [:admin, word] %></td>
      <td><%= link_to word.traditional, [:admin, word] %></td>
      <td><%= link_to word.pinyin, [:admin, word] %></td>
      <td><%= link_to 'Edit', edit_admin_word_path(word) %></td>
      <td></td>
      <td><%= link_to 'Destroy', admin_word_path(word),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
