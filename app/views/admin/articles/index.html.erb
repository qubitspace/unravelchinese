<h1>Articles</h1>

<%= link_to 'New Article', new_admin_article_path %><br/><br/>

<table>
  <tr>
    <th>Title</th>
    <th colspan="2"></th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= link_to article.title, [:admin, article] %></td>
      <td><%= link_to 'Edit', edit_admin_article_path(article) %></td>
      <td></td>
      <td><%= link_to 'Destroy', admin_article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
