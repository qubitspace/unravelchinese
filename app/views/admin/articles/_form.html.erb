<%= form_for [:admin, @article] do |f| %>

  <%= fields_for :source do |source| %>
    <div class="field">
      <%= source.label :name, 'Source Name' %>
      <%= source.text_field :name %>
    </div>

    <div class="field">
      <%= source.label :link, 'Link' %>
      <%= source.text_field :link %>
    </div>
  <% end %>



  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <%= f.label :source %><br>
  <%= collection_select(:article, :source_id, @sources, :id, :name) %><br/><br/>

  <%= f.label :link %><br>
  <%= f.text_field :link %><br><br/>

  <%= f.label :title %><br>
  <%= f.text_field :title %><br><br/>

  <%= f.label :description %><br>
  <%= f.text_area :description %><br><br/>

  <p>
    <%= f.submit 'Save', :disable_with => 'Please wait ...' %>
  </p>
<% end %>


