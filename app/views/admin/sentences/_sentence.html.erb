<div class="admin_sentence">
  <% sentence.tokens.each do |token| %>
    <div style="display:inline-block;"><%= render partial: 'words/word', locals: { word: token.word } %></div>
  <% end %>


</div>

<div class="toggle_translations">
  <div class="toggle_translations_button_wrapper">
    <%= image_tag("translate2.jpg", class: 'toggle_translations_button') %>
  </div>
  <div class="translations">
    <div class="close_translation_tooltip">&#10006;</div>
    <% sentence.translations.each do |translation| %>
      <b><%= translation.source.name %></b><br>
      <%= raw translation.value %><br/>
      <% if translation.user.present? %> - <i><%= translation.user.id %></i><% end %><br>
    <% end %>
  </div>
</div>


<% if sentence.end %>
<div class="end_paragraph"></div>
<% end %>


<% if sentence.untokenized != '' %>
  <%= sentence.untokenized %>
  <%= link_to 'Tokenize', manage_admin_sentence_path(sentence) %>
<% end %>

<%= link_to 'Delete Sentence', [:admin, sentence], method: :delete %>
