<h1>Categories</h1>

<%= link_to 'New Category', show_new_form_categories_path(display_type: :list), remote: true, method: :put %>

<div class="categories">
  <% @categories.each do |category| %>
    <%= concept("category/category_cell/list", category, current_user: current_user).call(:show) %>
  <% end %>
</div>
