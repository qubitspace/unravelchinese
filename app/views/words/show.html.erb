       style="display:inline-block;width:300px;height:600px"
       data-ad-client="ca-pub-5667774105481877"
       data-ad-slot="6792082149"></ins>
  <script>
  (adsbygoogle = window.adsbygoogle || []).push({});
  </script>
<% end %>

<div class="content show_word">
  <%= concept("word/word_cell/show", @word, current_user: current_user).call(:show) %>

  <% unless @sub_words.empty? %>
    <h1>Sub Words</h1>
    <%= concept("word/word_cell/list", collection: @sub_words, current_user: current_user ) %>
  <% end %>

  <% unless @derived_words.empty? %>
    <h1>Related Words</h1>
    <%= concept("word/word_cell/list", collection: @derived_words, current_user: current_user ) %>
  <% end %>

  <% unless @synonyms.empty? %>
    <h1>Homophones</h1>
    <%= concept("word/word_cell/list", collection: @synonyms, current_user: current_user ) %>
  <% end %>

  <% unless @sentences.empty? %>
    <div class="sentences">
      <h1>Sentences</h1>
      <%= concept("sentence/sentence_cell/list", collection: @sentences, current_user: current_user ) %>
    </div>
  <% end %>

  <%# unless @articles.empty? %>
    <!--h1>Articles</h1-->
    <%#= @articles.count %>
  <%# end %>
</div>
