<% @results.each do |word| %>
  <%= link_to highlight(word.simplified, @term), word_url(word) %>|
  <%= link_to highlight(word.traditional, @term), word_url(word) %>|
  <%= link_to Word.highlight(word.pinyin, @term), word_url(word) %> -
  <%= Word.highlight(word.definitions.map(&:value).join(' / '), @term) %><br/>
<% end %>