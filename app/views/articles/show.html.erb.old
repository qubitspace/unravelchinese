
<% content_for :title do %>
  <div class="article_title"><%= @article.title %></div>
  <div class="article_meta">
    <%= time_ago_in_words @article.created_at %> ago<br>
    Source: <!--%= link_to @article.source.name, @article.source.link %-->
  </div>
<% end %>


<div class="content">

  <% unless @article.description.nil? %><%= @article.description %><% end %>
  <br><br>
  <hr>
  <br>
  <div class="sentences">

    <% @article.sentences.each do |sentence| %>
      <%= render partial: 'sentence', locals: { sentence: sentence } %>
    <% end %>
  </div>
</div>

<div class="content-header">Comments</div>
<div class="content">
  <%= render @article.comments %>

  <h2>Add a comment:</h2>
  <%= render 'comments/form' %>
</div>

<% content_for :meta do %>
  <div class="content article_stats">
  <%= render 'article_stats' %>
  </div>
<% end %>
