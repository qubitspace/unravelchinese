
<% content_for :title do %>
  <%= @article.title %>
<% end %>

<div class="content">

  <% unless @article.description.nil? %><%= @article.description %><% end %>

  <div class="sentences">

    <% @article.sentences.each do |sentence| %>
      <%= render partial: 'sentences/sentence', locals: { sentence: sentence } %>
    <% end %>
  </div>
</div>
<div class="content-header">
  Comments
</div>
<div class="content">
  <%= render @article.comments %>

  <h2>Add a comment:</h2>
  <%= render 'comments/form' %>
</div>

<% content_for :meta do %>
  <div class="content">
    <%= link_to @article.source.name, @article.source.link %>
  </div>
<% end %>
