<% content_for :title do %>
  <div class="title"><%= @article.title %></div>
  <%= @article.source.name %><br>
  <% unless @article.description.nil? %><%= @article.description %><% end %>
<% end %>

<div class="content">
  <%= concept("article/article_admin_menu_cell", @article, current_user: current_user) %>
  <%= concept("article/article_cell", @article, current_user: current_user).call(:show) %>


  <div class="content">
    <!--%= render comments %-->

    <h2>Add a comment:</h2>
    <%= simple_form_for @form, url: create_comment_article_path(@article) do |f| %>
      <%= f.input :body %>
      <%= f.button :submit, class: :expand %>
    <% end %>

    <%= @form.errors.messages %>
  </div>


  <div class='comments'>
    <%= concept "comment/comment_grid_cell", @article %>
  </div>
</div>