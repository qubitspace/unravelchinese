<h1>Articles</h1>

<% if current_user and current_user.admin? %>
  <%= link_to 'New Article', show_new_form_articles_path(display_type: :list), remote: true, method: :put %><br>
<% end %>

<% Category.all.collect do |category| %>
  <%= link_to category.name, articles_path(category_id: category.id) %> |
<% end %>

<br/>
<div class='articles'>
  <%= concept("article/article_cell/list", collection: @articles, current_user: current_user ) %>
</div>
