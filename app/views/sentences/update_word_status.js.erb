$('div.qtip:visible').qtip('hide');
$('.word_wrapper[wordId="<%= @word.id %>"]').each(function() {
  parent = $(this).parent();

  parent.hide();
  parent.html("<%= escape_javascript(render(:partial => { sentence: @word))%>");
  newWord = parent.find(">:first-child");
  addWordTooltip(newWord);
  if(newWord.hasClass("learning"))
  {
    addLearningMouseover(newWord);
  }
  parent.fadeIn(1000);
});

