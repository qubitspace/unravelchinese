<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<h4>Attachments</h4>
<%= @post.attachments.each do |attachment| %>
  <%= concept("attachment/attachment_cell/manage_attachment_cell", attachment, current_user: current_user) %>
<% end %>

<h2>Add an attachment:</h2>
<%= simple_form_for @attachment, url: create_attachment_post_path(@post) do |f| %>
  <%= f.input :document_id, collection: @documents %>
  <%= f.button :submit, class: :expand %>
<% end %>

<% article = @post.content %>

<% renderer = Redcarpet::Render::HTML.new(no_links: true, hard_wrap: true) %>
<% markdown = Redcarpet::Markdown.new(renderer, extensions = {}) %>
<%= raw markdown.render(@content) %>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
